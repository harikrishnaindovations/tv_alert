<div class="container">
  <div class="row">
    <div class="col-8">
      <table id="show-list" class="table table-striped table-bordered">
        <thead>
          <th> Channel </th>
          <th> Tv Show</th>
          <th> Telecast Time</th>
          <th> Favourite </th>
        </thead>
        <tbody>
            <%= render partial: "shared/tv_show", collection: @tv_shows, as: :tv_show %>
        </tbody>
      </table>
    </div>
    <div class="col-4">
      <h4> Favourite Tv Shows </h4>
      <%= render partial: "shared/tv_show", collection: @favourite_shows, as: :tv_show %>
    </div>
  </div>
</div>
